<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/item_bg_color"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="88dp"
        android:gravity="center_vertical|right"
        android:orientation="vertical"
        android:padding="10dp"
        >

        <com.dym.film.views.CustomTypefaceTextView
            android:id="@+id/tvTicketTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18:30"
            android:textColor="#606060"
            android:textSize="25sp"
            android:textStyle="bold"
            app:customTypeface="number"/>

        <com.dym.film.views.CustomTypefaceTextView
            android:id="@+id/tvTicketDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="2015-11-11"
            android:textColor="#606060"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="88dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:padding="5dp">

        <com.dym.film.views.CustomTypefaceTextView
            android:id="@+id/tvTicketName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="电影兑换劵"
            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            android:textSize="17sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <com.dym.film.views.CustomTypefaceTextView
                android:id="@+id/tvTicketCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1张"
                android:textColor="@color/item_text_gray_color"
                android:textSize="15sp"/>

            <com.dym.film.views.CustomTypefaceTextView
                android:id="@+id/tvAllMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" |￥50"
                android:textColor="@color/item_text_gray_color"
                android:textSize="15sp"/>

        </LinearLayout>

    </LinearLayout>

    <com.dym.film.views.CustomTypefaceTextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="兑换"
        android:textColor="#ffffff"
        android:gravity="center"
        android:padding="13dp"
        android:background="@color/red_color"
        />
</LinearLayout>