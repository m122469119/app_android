<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              android:paddingBottom="10dp">
    <RelativeLayout
        android:id="@+id/laySuggestFilmOne"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:background="#2d2d2d"
        android:padding="2dp">

        <ImageView
            android:id="@+id/imgSuggestFilmCover1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:maxHeight="100dp"
            android:maxWidth="120dp"
            android:src="@drawable/ic_default_loading_img"/>

        <com.dym.film.views.CustomTypefaceTextView
            android:id="@+id/tvSuggestFilmTitle1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:background="#30000000"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="6月科幻片期待榜"
            android:textColor="#ffffff"
            android:textSize="16sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/laySuggestFilmTwo"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:background="#2d2d2d"
        android:padding="2dp">

        <ImageView
            android:id="@+id/imgSuggestFilmCover2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:maxHeight="100dp"
            android:maxWidth="120dp"
            android:src="@drawable/ic_default_loading_img"/>

        <com.dym.film.views.CustomTypefaceTextView
            android:id="@+id/tvSuggestFilmTitle2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:background="#30000000"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="6月科幻片期待榜"
            android:textColor="#ffffff"
            android:textSize="16sp"/>

    </RelativeLayout>
</LinearLayout>