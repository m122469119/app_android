<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:orientation="vertical">
    <android.support.design.widget.TabLayout
        android:id="@+id/price_tabs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_measure_107dp"
        app:tabIndicatorColor="@color/red_color"
        app:tabSelectedTextColor="@color/white"
        app:tabPadding="0dp"
        app:tabPaddingStart="0dp"
        app:tabPaddingTop="0dp"
        app:tabPaddingEnd="0dp"
        app:tabPaddingBottom="0dp"
        app:tabIndicatorHeight="0dp"
        app:tabMinWidth="@dimen/common_measure_120dp"
        app:tabBackground="@drawable/bg_btn_grey_pressed_selector"
        app:tabTextColor="@color/item_text_gray_color"
        />
    <!--可滑动的布局内容-->
    <android.support.v4.view.ViewPager
        android:id="@+id/price_viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
