<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                >
    <ImageView
        android:id="@+id/imgRankingCover"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:background="@drawable/bg_bboard_item_shape"
        android:padding="0.5dp"
        android:src="@drawable/ic_default_loading_img"/>

    <com.dym.film.views.CustomTypefaceTextView
        android:id="@+id/tvRankingTitle"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_bboard_title_shape"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:text="6月科幻片期待榜"
        android:textColor="#ffffff"
        android:textSize="14sp"/>

</RelativeLayout>