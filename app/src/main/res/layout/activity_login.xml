<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/main_bg_color"
              android:orientation="vertical">

    <include
        layout="@layout/layout_custom_status_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@null"
            android:onClick="doClick"
            android:padding="15dp"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_titlebar_back_selector"/>

        <com.dym.film.views.CustomTypefaceTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="18sp"/>

        <com.dym.film.views.CustomTypefaceTextView
            android:id="@+id/btnToRegister"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:clickable="true"
            android:gravity="center"
            android:onClick="doClick"
            android:paddingRight="16dp"
            android:text="注册"
            android:textColor="#ffffff"
            android:textSize="16sp"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:padding="25dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_logo"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#404040"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#343434"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:layout_marginLeft="35dp"
            android:background="@drawable/ic_login_uname"/>

        <EditText
            android:id="@+id/etUserName"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="输入你的手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textColorHint="#7e7e7e"
            android:textSize="16sp"/>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#404040"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#343434"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:layout_marginLeft="35dp"
            android:background="@drawable/ic_login_pwd"/>

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入你的密码"
            android:inputType="textPassword"
            android:maxLength="20"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textColorHint="#7e7e7e"
            android:textSize="16sp"/>

        <com.dym.film.views.CustomTypefaceTextView
            android:id="@+id/btnToPassword"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginRight="16dp"
            android:background="#00000000"
            android:clickable="true"
            android:gravity="right|center_vertical"
            android:onClick="doClick"
            android:text="忘记密码"
            android:textColor="#ffffff"
            android:textSize="16sp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#404040"/>

    <com.dym.film.views.CustomTypefaceTextView
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_red_shape_selector"
        android:clickable="true"
        android:gravity="center"
        android:onClick="doClick"
        android:text="登录"
        android:textColor="#ffffff"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:maxHeight="50dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="80dp"
            android:layout_height="0.5dp"
            android:background="#353535"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第三方登录"
            android:layout_margin="10dp"
            android:gravity="center_vertical"
            android:textColor="#353535"
            android:textSize="14sp"/>

        <View
            android:layout_width="80dp"
            android:layout_height="0.5dp"
            android:background="#353535"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnWechatLogin"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@null"
            android:onClick="doClick"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_wechat_login"/>

        <ImageButton
            android:id="@+id/btnQQLogin"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@null"
            android:onClick="doClick"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_qq_login"
            android:visibility="visible"/>

        <ImageButton
            android:id="@+id/btnSinaLogin"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@null"
            android:onClick="doClick"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_sina_login"
            android:visibility="visible"/>
    </LinearLayout>

</LinearLayout>