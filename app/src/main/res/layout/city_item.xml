<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.dym.film.views.CustomTypefaceTextView
        android:id="@+id/sectionTextView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_measure_53dp"
        android:background="@color/main_bg_color"
        android:paddingLeft="@dimen/common_measure_16dp"
        android:text="A"
        android:gravity="center_vertical"
        android:textColor="#ffffff"
        android:textSize="@dimen/common_measure_18dp"

        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/infoRowContainer"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_measure_53dp"
        android:gravity="center_vertical"
        android:background="@drawable/listitem_selector"
        android:paddingLeft="@dimen/common_measure_16dp"
         >

        <com.dym.film.views.CustomTypefaceTextView
            android:id="@+id/cityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="广州"
            android:textColor="#ffffff"
            android:textSize="@dimen/common_measure_20dp"
             />

    </RelativeLayout>

</LinearLayout>