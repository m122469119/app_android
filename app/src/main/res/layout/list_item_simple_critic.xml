        <!--</LinearLayout>-->

    </LinearLayout>

    <com.dym.film.views.CustomTypefaceTextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/fen_ge_line"/>

</LinearLayout>