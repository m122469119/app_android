<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:visibility="gone"
                android:padding="20dp"
                android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="left"
            android:orientation="vertical">

            <View
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#303030"/>

            <TextView
                android:id="@+id/tvXLable1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:gravity="center"
                android:text=""
                android:textColor="#ccffffff"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <View
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#303030"/>

            <TextView
                android:id="@+id/tvXLable2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:text=""
                android:textColor="#ccffffff"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <View
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#303030"/>

            <TextView
                android:id="@+id/tvXLable3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:text=""
                android:textColor="#ccffffff"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <View
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#303030"/>

            <TextView
                android:id="@+id/tvXLable4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:text=""
                android:textColor="#ccffffff"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="35dp">
            <View
                android:id="@+id/likeBarView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#70b10b0b"/>

            <View
                android:id="@+id/viewPraise"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_ticket_declare_worth"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"/>
            <com.dym.film.views.CustomTypefaceTextView
                android:id="@+id/tvLikeTicketIndex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/viewPraise"
                android:layout_centerVertical="true"
                android:text=""
                app:customTypeface="number"
                android:textColor="#ccffffff"
                android:textSize="30sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="35dp">
            <View
                android:id="@+id/unLikeBarView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#70b10b0b"/>
            <View
                android:id="@+id/viewPraise2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_ticket_declare_not_worth"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"/>
            <com.dym.film.views.CustomTypefaceTextView
                android:id="@+id/tvUnLikeTicketIndex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/viewPraise2"
                android:layout_centerVertical="true"
                android:text=""
                app:customTypeface="number"
                android:textColor="#ccffffff"
                android:textSize="30sp"/>
        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>