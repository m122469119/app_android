<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/main_bg_color">
    <ImageView
        android:id="@+id/layout_no_data_iv"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/common_measure_180dp"
        android:layout_height="@dimen/common_measure_133dp"
        android:layout_marginTop="@dimen/common_measure_60dp"/>
    <com.dym.film.views.CustomTypefaceTextView
        android:id="@+id/layout_no_data_tv"
        android:layout_below="@id/layout_no_data_iv"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color_gray1"
        android:layout_marginTop="@dimen/common_measure_35dp"
        android:layout_marginBottom="@dimen/common_measure_35dp"
        android:textSize="@dimen/common_measure_22dp"
        />
</RelativeLayout>